<div class="col-md-3">
        <h2>User info</h2>
          <%= image_tag user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="border padding-10px" style="height:38px;">
          <%= link_to edit_user_path(current_user.id), class:"text-grey d-flex justify-content-center align-items-center" do %>
          <i class="fa-solid fa-user-gear"></i>
          <% end %>
          </div>
        <h2 class="mt-3">New book</h2>
        <div class="form-group">
        <%= form_with model: book do |f| %>
          <div class="field">
           <label for="book_title">Title</label><br>
        <%= f.text_field :title %>
          </div>

          <div class="field">
           <label for="book_body">opinion</label><br>
        <%= f.text_area :body %>
          </div>

        <%= f.submit 'Create Book', class:"btn btn-success" %>
        <% end %>
      </div>
    </div>